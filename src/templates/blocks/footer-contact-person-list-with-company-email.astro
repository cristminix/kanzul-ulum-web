---
const {email,cp} = Astro.props;

---
<div class="col4-2 tf_box tf_float">
    <div id="text-1008" class="widget widget_text">
      <h4 class="widgettitle">Kontak</h4>
      <div class="textwidget">
        {cp.map((item, index) => (
          <div key={index}
          style="background: url('/assets/images/icon-whatsapp.png') no-repeat 0 5px; padding: 5px 0 0 30px;"
        >
          {item.phone} ({item.name})
        </div>
        ))}
        
        <div
          style="background: url('/assets/images/icon-email.png') no-repeat 0 5px; padding: 5px 0 0 30px;"
        >
          {email}
        </div>
      </div>
    </div>
  </div>