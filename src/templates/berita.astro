---
import { contact, company, contact_person } from "../data/site-data.json";
import BeritaMainContent from "./sections/berita-main-content.astro";

const page = {
	title: `Berita ${company.name} `,
	meta: {
		name: "berita ponpes kanzul ulum kesambi, berita pondok pesantren kanzul ulum, berita pondok pesantren kanzul ulum kesambi cirebon, pondok pesantren kanzul ulum kesambi, pondok pesantren kanzul ulum cirebon, pondok pesantren di cirebon, ponpes cirebon, pengurus pondok pesantren kanzul ulum",
		description: `Berita ${company.shortAddress} Hub. ${contact.phone}`,
	},
};

import ColumnLayout from "./layouts/column.astro";
import berita from "../data/berita.json";
import "../styles/berita.css";
---

<ColumnLayout page={page} contact={contact} cp={contact_person} company={company}>
  <BeritaMainContent berita={berita}/>
</ColumnLayout>
 